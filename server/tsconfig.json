{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"strict": true,
		"baseUrl": "./",
		"incremental": true,
		"strictNullChecks": false,
		"typeRoots": ["./types", "./node_modules/@types"]
	},
	"compileOnSave": true,
	"include": [
		"src"
	],
	"exclude": ["node_modules"]
}